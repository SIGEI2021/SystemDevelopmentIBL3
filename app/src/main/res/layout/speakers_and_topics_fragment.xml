<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/background_design"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please suggest a Speaker or a Topic"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_margin="10dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:padding="10dp"
            >
        </TextView>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the speaker's name..."
            android:gravity="left"
            android:drawableLeft="@drawable/ic_name"
            android:drawablePadding="7dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:id="@+id/speakerName"
            android:background="@drawable/input_types"
            android:padding="12dp">
        </EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Speaker's church/ministry..."
            android:gravity="left"
            android:drawableLeft="@drawable/ic_church"
            android:drawablePadding="7dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:id="@+id/speakerChurch"
            android:background="@drawable/input_types"
            android:padding="12dp">
        </EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Speaker's phone number..."
            android:gravity="left"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="7dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:inputType="number"
            android:id="@+id/speakerPhoneNumber"
            android:background="@drawable/input_types"
            android:padding="12dp">
        </EditText>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="OR / AND"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_margin="10dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:padding="10dp"
            >
        </TextView>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="suggest a topic..."
            android:gravity="left"
            android:drawableLeft="@drawable/ic_document"
            android:drawablePadding="7dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColorHint="#ffffff"
            android:layout_marginBottom="20dp"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:id="@+id/suggestedTopic"
            android:background="@drawable/input_types"
            android:padding="12dp">
        </EditText>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/submit"
            android:text="Submit"
            android:textAllCaps="false"
            android:background="@drawable/buttons"
            android:padding="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="20sp">
        </Button>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Be Blessed. Â© TUKCU 2020"
            android:textSize="15sp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:layout_centerHorizontal="true">
        </TextView>

    </LinearLayout>



</ScrollView>