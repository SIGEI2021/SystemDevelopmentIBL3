<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_design"
    tools:context="example.tukcu.tukcu.MemberCompleteRegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:orientation="vertical"
        >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#0E753E"
            android:id="@+id/toolbarmember"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:elevation="4dp">

        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter the details below to complete your member registration"
            android:textSize="20sp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textColor="#ffffff"
            android:gravity="center"
            ></TextView>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your first name..."
            android:gravity="left"
            android:drawableLeft="@drawable/ic_name"
            android:drawablePadding="7dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="10dp"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:id="@+id/memberFirstName"
            android:background="@drawable/input_types"
            android:padding="12dp"></EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your surname..."
            android:gravity="left"
            android:drawableLeft="@drawable/ic_name"
            android:drawablePadding="7dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColorHint="#ffffff"
            android:layout_marginBottom="13dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:id="@+id/memberSurName"
            android:background="@drawable/input_types"
            android:padding="12dp"></EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your gender..."
            android:gravity="left"
            android:drawableLeft="@drawable/ic_name"
            android:drawablePadding="7dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColorHint="#ffffff"
            android:layout_marginBottom="13dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:id="@+id/memberGender"
            android:background="@drawable/input_types"
            android:padding="12dp"></EditText>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your course..."
            android:gravity="left"
            android:drawableLeft="@drawable/ic_course"
            android:drawablePadding="7dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColorHint="#ffffff"
            android:layout_marginBottom="13dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:id="@+id/memberCourse"
            android:background="@drawable/input_types"
            android:padding="12dp"></EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your year of study..."
            android:gravity="left"
            android:drawableLeft="@drawable/ic_number"
            android:drawablePadding="7dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColorHint="#ffffff"
            android:layout_marginBottom="13dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:id="@+id/memberYearOfStudy"
            android:background="@drawable/input_types"
            android:padding="12dp"></EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your subcom..."
            android:gravity="left"
            android:drawableLeft="@drawable/ic_subcom"
            android:drawablePadding="7dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColorHint="#ffffff"
            android:layout_marginBottom="13dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:id="@+id/memberSubCom"
            android:background="@drawable/input_types"
            android:padding="12dp"></EditText>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your cell group..."
            android:gravity="left"
            android:drawableLeft="@drawable/ic_cell"
            android:drawablePadding="7dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColorHint="#ffffff"
            android:layout_marginBottom="13dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:id="@+id/memberCellGroup"
            android:background="@drawable/input_types"
            android:padding="12dp"></EditText>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your phone number..."
            android:gravity="left"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="7dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColorHint="#ffffff"
            android:layout_marginBottom="13dp"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:id="@+id/memberPhoneNumber"
            android:inputType="number"
            android:background="@drawable/input_types"
            android:padding="12dp"></EditText>




        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/memberCompleteRegistrationButton"
            android:text="Register"
            android:textAllCaps="false"
            android:background="@drawable/buttons"
            android:padding="12dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="20sp"></Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/memberCompleteRegistrationBackButton"
            android:text="Back"
            android:textAllCaps="false"
            android:background="@drawable/buttons"
            android:padding="12dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="20sp"></Button>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Be Blessed. Â© TUKCU 2021"
            android:textSize="15sp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:layout_centerHorizontal="true"></TextView>
    </LinearLayout>

</ScrollView>