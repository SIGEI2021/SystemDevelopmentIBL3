<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tukcu.tukcu">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_thetukculogo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_thetukculogo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="example.tukcu.tukcu.ProfileSettingsActivity"></activity>
        <activity android:name="example.tukcu.tukcu.ForgotPasswordActivity" />
        <activity
            android:name="example.tukcu.tukcu.HomeActivity"
            android:label="@string/title_activity_home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="example.tukcu.tukcu.LoginActivity" />
        <activity android:name="example.tukcu.tukcu.StaffCompleteRegistrationActivity" />
        <activity android:name="example.tukcu.tukcu.AssociateCompleteRegistrationActivity" />
        <activity android:name="example.tukcu.tukcu.MemberCompleteRegistrationActivity" />
        <activity android:name="example.tukcu.tukcu.StaffRegistrationActivity" />
        <activity android:name="example.tukcu.tukcu.AssociateRegistrationActivity" />
        <activity android:name="example.tukcu.tukcu.MemberRegistrationActivity" />
        <activity android:name="example.tukcu.tukcu.SelectRegistrationActivity" />
        <activity android:name="example.tukcu.tukcu.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
    </application>

</manifest>